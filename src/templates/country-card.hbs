{{#each this}}
<h1 class="country-name">{{name}}</h1>
<div class="main-container">
    <div class="contry-container">
        <span>Capital:{{capital}}</span>
        <span>Population:{{Population}}</span>
        <span>Languages</span>
        <ul>
            {{#each languages}}
            <li>{{name}}</li>
            {{/each}}
        </ul>
    </div>
<div class="flag">
    <img class="flag-img" src='{{flag}}' alt="country-flag">
</div>
</div>
{{/each}}